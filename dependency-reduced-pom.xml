<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.lagopusempire</groupId>
  <artifactId>MultiHomes</artifactId>
  <name>${project.artifactId}</name>
  <version>0.0.1</version>
  <description>Bukkit Plugin that allows users to have multiple homes.</description>
  <inceptionYear>2015</inceptionYear>
  <developers>
    <developer>
      <name>MrZoraman</name>
      <email>MrZoraman@Gmail.com</email>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>ISC License</name>
      <url>http://choosealicense.com/licenses/isc/</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <organization>
    <name>Lagopus Empire</name>
    <url>lagopusempire.com</url>
  </organization>
  <build>
    <resources>
      <resource>
        <directory>.</directory>
        <includes>
          <include>LICENSE.txt</include>
        </includes>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources/config</directory>
        <includes>
          <include>config.yml</include>
        </includes>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources/pluginYaml/${build.profile.id}</directory>
        <includes>
          <include>plugin.yml</include>
        </includes>
      </resource>
    </resources>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>normal</id>
      <properties>
        <build.profile.id>normal</build.profile.id>
      </properties>
    </profile>
    <profile>
      <id>shaded</id>
      <build>
        <finalName>${project.artifactId}-shaded</finalName>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>2.3</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <artifactSet>
                    <includes>
                      <include>com.lagopusempire:BukkitLCS:*:*</include>
                    </includes>
                  </artifactSet>
                  <shadedArtifactAttached>false</shadedArtifactAttached>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
      <properties>
        <build.profile.id>shaded</build.profile.id>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>Lagopus Empire Repo</id>
      <name>Lagopus Empire Repo-releases</name>
      <url>http://repo.lagopusempire.com/artifactory/lagopus-empire-repo</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>bukkit</artifactId>
      <version>1.8-R0.1-SNAPSHOT</version>
      <scope>system</scope>
      <systemPath>C:\Users\Mr\Documents\NetBeansProjects\MultiHomes/lib/bukkit-1.8-R0.1-SNAPSHOT-b5.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
</project>

